@{
    ViewBag.Title = "challanDL";

    DL dl = ViewBag.dl;
}
@model PoliceAdmin.Models.Challan
@using PoliceAdmin.Models
@{
    if (Request.Cookies.Get("tAdmin") != null)
    {

        string t = Request.Cookies.Get("tAdmin").Value;
        if (t == "Yes")
        {
            @section nav{
                <div class="navbar navbar-inverse navbar-fixed-top">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            @Html.ActionLink("Home", "Index", "TPHome", new { area = "" }, new { @class = "navbar-brand" })
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">

                                <li>@Html.ActionLink("PUC", "index", "PUCs")</li>
                                <li>@Html.ActionLink("RC BOOK", "index", "RCs")</li>
                                <li>@Html.ActionLink("DL", "index", "DLs")</li>
                                <li>@Html.ActionLink("TraficPolice", "index", "Admin")</li>
                                <li>@Html.ActionLink("Rules", "index", "RULES")</li>
                                <li>@Html.ActionLink("Log Out", "Logout", "TrafficLogin")</li>
                            </ul>


                        </div>
                    </div>
                </div>
            }
        }


    }
    else
    {
        @section nav{
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Home", "Index", "TPHome", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">


                            <li>@Html.ActionLink("Log Out", "Logout", "TrafficLogin")</li>
                        </ul>


                    </div>
                </div>
            </div>
        }
    }

}



<style>
    select{
        max-width:80%;

    }
</style>
<h2>challanDL</h2>

@using (Html.BeginForm("challanDL", "TPHome", FormMethod.Post))
{
    @Html.AntiForgeryToken()




    <div class="form-horizontal">
        <h4>DL</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <div class="control-label col-md-2">
                Driving License No.:
            </div>
            <div class="col-md-10">
                <input type="text" value="@dl.LicenceNo" name="dl_no" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">
                Issue Date:
            </div>
            <div class="col-md-10">
                <input type="text" value="@System.DateTime.Now" name="IssueDate" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">
                Rules Broken:
            </div>
            <div class="col-md-10">
                @Html.DropDownList("Rules", null, htmlAttributes: new { @class = "form-control", @multiple = "true" ,@size=4})
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">
                Paid or UnPaid
            </div>
            <div class="col-md-10">
               @Html.EditorFor(model=>model.Paid, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>



    <center> <button class="btn btn-primary" type="submit">Search</button></center>
}



