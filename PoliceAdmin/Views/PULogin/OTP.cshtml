<h2>Trafic Police OTP Verification</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <b class="text-danger">@ViewBag.msg</b>

    <table>

        <tr>
            <td class="col-md-2"> <br />Enter OTP:</td>
            <td>
                <br />
                <input class="form-control" type="text" pattern="[0-9]{6}" name="otp" placeholder="6 Digit Number" required />
            </td>
        </tr>
        <tr>
            <td class="col-md-2"></td>
            <td>
                <br />
                <button class="btn btn-primary" type="submit">Verify</button>
            </td>
        </tr>
    </table>
}