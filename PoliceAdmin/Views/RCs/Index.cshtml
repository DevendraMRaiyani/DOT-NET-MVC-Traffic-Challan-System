}
<h2>RC</h2>
<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
       
        margin: 15pxpx;
        display:inline-block;
        text-align: center;
        font-family: arial;
        padding:15px;
    }

    .title {
        color: grey;
        font-size: 18px;
    }

    button {
        border: none;
        outline: 0;
        display: inline-block;
        padding: 8px;
        color: black;
        background-color: black;
        
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

   
    }
    img{
        max-width:300px;
        max-height:300px;
    }
        button:hover, a:hover {
            opacity: 0.7;
        }
    p{
        margin:15px;
       
    }
    .link > a{
        border: none;
        outline: 0;
        display: inline-block;
        padding: 8px;

        background-color: black;
        
        cursor: pointer;
        width: 100%;
        font-size: 18px;
        color:white;
    }
</style>
<p>
<p style="font-size: x-large;">Total RC issued:@ViewBag.totalRC<br />   </p>


    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" }) &nbsp;&nbsp;
    @Html.ActionLink("Search By State", "SearchByRTO", null, new { @class = "btn btn-default" }) &nbsp;&nbsp;
    @Html.ActionLink("Search By category ", "SearchByType", null, new { @class = "btn btn-default" }) &nbsp;&nbsp;
</p>
<div class="container">
    @foreach (var item in Model)
    {
        <div class="card col-sm-6">

            <div class="col-sm-8" style="float:left ;text-align:justify">
                <h1>@Html.DisplayFor(modelItem => item.VehicleNo )</h1>
                <p class="title">@Html.DisplayFor(modelItem => item.OwnerName)</p>

                @{
                if (DateTime.Compare(DateTime.Now, item.RegDate ) > 0 && DateTime.Compare(DateTime.Now, item.ExpiryDate) < 0)
                {
            <p style="color:green;font-weight: bold;font-size: 20px;">Active</p>
                }
                else
                {
            <p style="color:red;font-weight: bold;font-size: 20px;">Not Active</p>
                }
                }


                <p class="title">
                    @Html.DisplayNameFor(model => model.RegDate)   -@Html.DisplayFor(modelItem => item.RegDate)
                </p>
                <p class="title">
                    @Html.DisplayNameFor(model => model.ExpiryDate)   -@Html.DisplayFor(modelItem => item.ExpiryDate)
                </p>
                <p class="title">
                    @Html.DisplayNameFor(model => model.Vehicletype)   -@Html.DisplayFor(modelItem => item.Vehicletype)
                </p>

                <!---
                    <div style="margin: 24px 0;">
                        <i class="fas fa-car"></i>
                        <i class="material-icons">traffic</i>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-linkedin"></i></a>
                        <a href="#"><i class="fa fa-facebook"></i></a>
                    </div>
                -->
            </div>
            <p class="link">@Html.ActionLink("Details", "Details", new { id = item.VehicleNo })</p>
        </div>
                    }
</div>
