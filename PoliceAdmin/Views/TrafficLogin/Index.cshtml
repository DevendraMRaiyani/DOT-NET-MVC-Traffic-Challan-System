<h2>Traffic User Login</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <b class="text-danger">@ViewBag.err</b>

    <table>

        <tr>
            <td class="col-md-2">ID:</td>
            <td>
                <input class="form-control" type="text" pattern="TP(GJ|MH|RJ)[0-9]{5}"  name="id" required />
            </td>
        </tr>
        <tr>
            <td class="col-md-2">Password:</td>
            <td>
                <br />
                <input class="form-control" type="password" name="password" required />
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <br />
                <button class="btn btn-primary" type="submit">Login</button>
            </td>
        </tr>
        
    <tr>
        <td></td>
        <td>
            <br />
            @Html.ActionLink("Forgot Password?","forgot")
           
        </td>
    </tr>
    </table>
}

